<!-- Begin Content -->
<div class="content-inner profile">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">Edit category</h2>
                    <div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti ti-home"></i></a></li>
                            
                            <li class="breadcrumb-item"><a href="/admin"><i class="ti ti-folder"></i></a></li>

                            <li class="breadcrumb-item active">Categories</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row flex-row">
            <!-- Begin Widget -->
            <%- include('./../common/dashboard-widget.ejs') %>
            <!-- End Widget -->

            <!-- put your stuffs here -->        
            <div class="col-xl-9">
                <div class="widget-body">
                    <form class="form-horizontal" action="" method="POST">
                            <div class="form-group row d-flex align-items-center mb-5">
                                    <label class="col-lg-3 form-control-label">#</label>
                                    <div class="col-lg-9">
                                        <input type="text" disabled value="<%= cat.id %>" class="form-control">
                                        <input type="hidden" name="id" value="<%= cat.id %>">
                                    </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5">
                                    <label class="col-lg-3 form-control-label">Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="name" value="<%= cat.name %>" placeholder="<%= cat.name %>" class="form-control">
                                    </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5">
                                    <label class="col-lg-3 form-control-label">Slug</label>
                                    <div class="col-lg-9">
                                        <input disabled type="text" name="slug"value="<%= cat.slug %>" placeholder="<%= cat.slug %>" class="form-control">
                                    </div>
                            </div>
                            <% if(typeof isSubCat !== 'undefined' && isSubCat){ %>
                                <div class="form-group row mb-5">
                                    <label class="col-lg-3 form-control-label">Select Main Category</label>
                                    <div class="col-lg-9 select mb-3">
                                        <select name="MainCategoryId" class="custom-select form-control">
                                            <% mainCats.forEach(mainCat => { %>
                                                <% if(mainCat.id == cat.MainCategoryId){ %>
                                                    <option selected value="<%= mainCat.id %>"><%= mainCat.name %></option>
                                                <% }else{ %>
                                                <option value="<%= mainCat.id %>"><%= mainCat.name %></option>
                                                <% } %>
                                            <% }) %>
                                        </select>
                                    </div> 
                                </div>
                            <% } %>
                            <div class="em-separator separator-dashed"></div>
                            
                            <div class="text-center">
                                <button class="btn btn-gradient-01" type="submit">Save Changes</button>
                            </div>
                    </form>
                </div>
            </div>
            <!-- end your stuffs here -->
        </div>
        <!-- End Row -->
    </div>
</div>
