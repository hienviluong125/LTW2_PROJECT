<!-- Begin Content -->
<div class="content-inner active profile">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">Dashboard</h2>
                    <div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti ti-home"></i></a></li>
                            
                            <li class="breadcrumb-item"><a href="/admin"><i class="ti ti-folder"></i></a></li>

                            <li class="breadcrumb-item active">Categories</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row flex-row">
            <!-- Begin Widget -->
            <%- include('./../common/dashboard-widget.ejs') %>
            <!-- End Widget -->

            <!-- put your stuffs here -->        
            <div class="col-xl-9">
                    <!-- Begin Widget 07 -->
                    <div class="widget widget-07 has-shadow">
                        <!-- Begin Widget Header -->
                        <% if(typeof flash !== 'undefined' && flash.length > 0){ %>

                            <%- include('./../../layouts/blocks/flash-message.ejs', {className: flash[0].className, msg: flash[0].message}) %>
                        <% } %>
                        <div class="widget-header bordered d-flex align-items-center">
                            <h2>Categories Overview</h2>
                            <div class="widget-options">
                                <div class="btn-group" role="group">

                                    <a href="/admin/categories/add">
                                        <button type="button" class="btn btn-gradient-04 mr-1 mb-2">
                                            <i class="ti ti-clipboard"></i>
                                            <i class="ti ti-plus"></i>
                                            Main
                                        </button>
                                    </a>
                                    <a href="/admin/categories/sub/add">
                                        <button type="button" class="btn btn-gradient-03 mr-1 mb-2">
                                            <i class="ti ti-clipboard"></i>
                                            <i class="ti ti-plus"></i>
                                            Sub
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- End Widget Header -->
                        <!-- Begin Widget Body -->
                        <div class="widget-body">
                                <div class="table-responsive">
                                    <table id="sorting-table" class="table mb-0">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Slug</th>
                                                <th><span style="width:120px">Type</span></th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.forEach(mainCat => { %>
                                                <tr>
                                                    <td><span class='text-primary'> <%= mainCat.dataValues.id %> </span></td>
                                                    <td><span class="text-primary"> <%= mainCat.dataValues.name %> </span></td>
                                                    <td><span class="text-primary"> <%= mainCat.dataValues.slug %> </span></td>
                                                    <td>
                                                        <span style="width:120px">
                                                            <span class="badge-text badge-text-small success">Main</span>
                                                        </span>
                                                    </td>
                                                    <td class="td-actions">
                                                        <a href="/admin/categories/edit/<%= mainCat.dataValues.id %>"><i class="la la-edit edit"></i></a>
                                                        <a href="/admin/categories/delete/<%= mainCat.dataValues.id %>"><i class="la la-close delete"></i></a>
                                                    </td>
                                                </tr>
                                                <% mainCat.SubCategories.forEach(subCat =>{ %>
                                                    <tr>
                                                        <td><span class='text-primary'> <%= subCat.dataValues.id %> </span></td>
                                                        <td><span class="text-primary"> <%= subCat.dataValues.name %> </span></td>
                                                        <td><span class="text-primary"> <%= subCat.dataValues.slug %> </span></td>
                                                        <td>
                                                            <span style="width:120px">
                                                                <span class="badge-text badge-text-small info">Sub</span>
                                                            </span>
                                                        </td>
                                                        <td class="td-actions">
                                                            <a href="/admin/categories/sub/edit/<%= subCat.dataValues.id %>"><i class="la la-edit edit"></i></a>
                                                            <a href="/admin/categories/sub/delete/<%= subCat.dataValues.id %>"><i class="la la-close delete"></i></a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <!-- End Widget Body -->
                        <!-- Begin Widget Footer -->
                        <div class="widget-footer d-flex align-items-center">
                            <div class="mr-auto p-2">
                                <!-- <span class="display-items">Showing 69 Results</span> -->
                            </div>
                            
                        </div>
                        <!-- End Widget Footer -->
                    </div>
                    <!-- End Widget 07 -->
            </div>
            <!-- end your stuffs here -->
        </div>
        <!-- End Row -->
    </div>
</div>
