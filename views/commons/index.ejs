<div class="content-inner boxed mt-4 w-100">
    <div class="container pt-3">
        <div class="row top-4-posts">
            <div class="col-xl-7 col-md-12">
                <div class="widget ">
                    <img src="assets/img/posts/<%= noticeablePosts[0].thumbnail %>" alt="..." class="main-thumbnail">
                    <a href="/posts/detail/<%= noticeablePosts[0].slug %>">
                        <h3 class="mt-3 text-dark font-weight-bold">
                            <%= noticeablePosts[0].title.length > 55 
                                ? noticeablePosts[0].title.substring(0,55) + '...'
                                : noticeablePosts[0].title
                            %>
                        </h3>
                    </a>
                    <!-- <div></div> -->
                    <div class="">
                        <%= parseVIDate(noticeablePosts[0].releaseDate) %> &emsp;
                        <a
                            href="/posts/<%=  noticeablePosts[0].MainCategory.slug + '/' + noticeablePosts[0].SubCategory.slug %>/1">
                            <span class=" text-gray font-weight-bold">
                                <%= noticeablePosts[0].SubCategory.name %>
                            </span>
                        </a>

                    </div>
                    <div class="mt-2 text-dark">
                        <%= noticeablePosts[0].shortContent.length > 147 
                            ? noticeablePosts[0].shortContent.substring(0,147) + '...'
                            : noticeablePosts[0].shortContent
                        %>
                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-md-12">
                <div class="row">
                    <% for(var i=1;i<4;i++){ %>
                    <div class="col-xl-12 col-md-4 mb-4">
                        <div class="row">
                            <div class="col-xl-8 col-md-12">
                                <a href="/posts/detail/<%= noticeablePosts[i].slug %>">
                                    <h4 class="text-dark font-weight-bold">
                                        <%= noticeablePosts[i].title.length > 55 
                                                    ? noticeablePosts[i].title.substring(0,55) + '...'
                                                    : noticeablePosts[i].title
                                                %>
                                    </h4>
                                </a>
                                <div class="">
                                    <%= parseVIDate(noticeablePosts[i].releaseDate) %> &emsp;
                                    <a
                                        href="/posts/<%=  noticeablePosts[i].MainCategory.slug + '/' + noticeablePosts[i].SubCategory.slug %>/1">
                                        <span class="text-gray font-weight-bold">
                                            <%= noticeablePosts[i].SubCategory.name %>
                                        </span>
                                    </a>

                                </div>
                                <div class="text-dark">
                                    <%= noticeablePosts[i].shortContent.length > 100 
                                            ? noticeablePosts[i].shortContent.substring(0,100) + '...'
                                            : noticeablePosts[i].shortContent
                                        %>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-12">
                                <img src="assets/img/posts/<%= noticeablePosts[i].thumbnail %>" alt="..."
                                    class="top-right-thumbnail float-left">
                            </div>

                        </div>
                    </div>
                    <% }%>
                </div>
            </div>
        </div>
        <h1 class="mt-3 font-weight-bold">Bài viết mới nhất</h1>
        <hr>
        <div class="row">

            <div class="owl-carousel owl-theme">
                <% for(var i=0;i < latestPosts.length ;i++){ %>
                <div class="item">
                    <img src="assets/img/posts/<%= latestPosts[i].thumbnail %>" alt="..."
                        class="float-right owl-thumbnail">
                    <a href="/posts/detail/<%= latestPosts[i].slug %>">
                        <div class="text-dark font-weight-bold">
                            <%= latestPosts[i].title.length >= 40 ? latestPosts[i].title.substring(0,40) + '...' : latestPosts[i].title %>
                        </div>
                    </a>

                    <%= parseVIDate(latestPosts[i].releaseDate) %> &emsp;
                    <a href="posts/<%= latestPosts[i].MainCategory.slug + '/' + latestPosts[i].SubCategory.slug %>/1">
                        <span class="text-gray font-weight-bold">
                            <%= latestPosts[i].SubCategory.name %>
                        </span>
                    </a>

                </div>
                <% }%>
            </div>

        </div>
        <h1 class="mt-3 font-weight-bold">Bài viết hay</h1>
        <hr>
        <div class="row top-10-views-posts">
            <div class="col-xl-8 col-md-12">
                <div class="row">
                    <% for(var i=0;i< mostViewsPosts.length;i++){ %>
                    <div class="col-xl-12 col-md-12 mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <a href="/posts/detail/<%= mostViewsPosts[i].slug %>">
                                    <h4 class="text-dark font-weight-bold">
                                        <%= mostViewsPosts[i].title  %>
                                    </h4>
                                </a>

                                <div class="">
                                    <%= parseVIDate(mostViewsPosts[i].releaseDate) %> &emsp;
                                    <a
                                        href="/posts/<%= mostViewsPosts[i].MainCategory.slug + '/' + mostViewsPosts[i].SubCategory.slug %>/1">
                                        <span
                                            class="text-gray font-weight-bold"><%= mostViewsPosts[i].SubCategory.name %></span>
                                    </a>

                                </div>
                                <div class="text-dark">
                                    <%= mostViewsPosts[i].shortContent %>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <img src="assets/img/posts/<%= mostViewsPosts[i].thumbnail %>" alt="..."
                                    class="bottom-left-thumbmail float-left">
                            </div>
                        </div>
                    </div>
                    <% }%>
                    <div class="col-xl-12 col-md-12 m-0 p-0">
                        <a href="/posts/all/1" class="btn btn-block btn-gradient-01 btn-square">Xem thêm</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-12">
                <h3 class="text-default-color font-weight-bold mb-4">Chuyên mục nổi bật</h3>
                <div class="row">
                    <% for(var i=0;i < newPostByHotCats.length ;i++){ %>
                    <div class="col-xl-12 col-md-2 mb-3">
                        <div class="row">
                            <div class="col-xl-3">
                                <img src="assets/img/posts/<%= newPostByHotCats[i].thumbnail %>" alt="..."
                                    class="bottom-right-thumbmail float-left">
                            </div>
                            <div class="col-xl-9">
                                <a
                                    href="posts/<%= newPostByHotCats[i].MainCategory.slug + '/' + newPostByHotCats[i].SubCategory.slug %>/1">
                                    <div class="text-default-color font-weight-bold">
                                        <%= newPostByHotCats[i].SubCategory.name %>
                                    </div>
                                </a>
                                <a href="/posts/detail/<%= newPostByHotCats[i].slug %>">
                                    <div class="text-dark small-text">
                                        <%= newPostByHotCats[i].title.length >= 60
                                                ? newPostByHotCats[i].title.substring(0,60) + '...'
                                                : newPostByHotCats[i].title
                                            %>
                                    </div>
                                </a>

                            </div>
                        </div>
                    </div>
                    <% }%>
                </div>
            </div>
        </div>
    </div>
    <div class="row top-10-views-posts">

    </div>
</div>

</div>