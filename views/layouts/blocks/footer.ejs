            <div class="col-md-5">
                <div class="row">
                    <% allCategories.forEach(cate => { %>
                    <div class="col-md-4">
                        <h3 class="default-text-color mb-4">
                            <a class="default-text-color" href="/posts/<%= cate.slug %>/1">
                                <%= cate.name %>
                            </a>

                        </h3>
                        <% cate.SubCategories.forEach(subcate => { %>
                        <h5 class="default-text-color">
                            <a class="default-text-color" href="/posts/<%= cate.slug %>/<%= subcate.slug %>/1">
                                <%= subcate.name %>
                            </a>
                        </h5>
                        <% }) %>
                    </div>
                    <% }) %>
                    <div class="form-group col-md-11 mt-4">
                        <form method="GET" action="/posts/search">
                            <div class="input-group">
                                <span class="input-group-addon addon-primary">
                                    <i class="ti ti-search mt-1"></i>
                                </span>
                                <input name="page" value="1" type="hidden" />
                                <input name="text" type="text" placeholder="Tìm kiếm..." class="form-control">
