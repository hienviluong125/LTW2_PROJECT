<!-- Begin Content -->
<div class="content-inner profile">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">Profile</h2>
                    <div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/"><i class="ti ti-home"></i></a></li>
                            
                            <li class="breadcrumb-item active">Profile</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
        <div class="row flex-row">
            <!-- Begin Widget -->
            <%- include('./../layouts/blocks/profile-widget.ejs', {user}) %>
            <!-- End Widget -->
            
            <div class="col-xl-9 mx-auto">
                <div class="widget has-shadow">
                    <div class="widget-header bordered no-actions d-flex align-items-center">
                        <h4>Personal Profile</h4>
                    </div>
                    <% if(typeof flash !== 'undefined'){ %>
                        <% flash.forEach(info => { %>
                            <%- include('./../layouts/blocks/flash-message.ejs', { msg: info.message, className:'success' }) %>
                        <% }) %>
                    <% } %>
                    <div class="widget-body">
                        <div class="col-10 ml-auto">
                            <div class="section-title mt-3 mb-3">
                                <h4>Personnal Informations</h4>
                            </div>
                        </div>
                        <form class="form-horizontal" action="" method="POST">
                            <div class="form-group row d-flex align-items-center mb-5">
                                <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Full Name</label>
                                <div class="col-lg-6">
                                    <input <%= editStatus %> type="text" class="form-control" name="username" value="<%= user.username %>" placeholder="<%= user.username %>">
                                </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5">
                                <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Email</label>
                                <div class="col-lg-6">
                                    <input disabled type="text" class="form-control" name="email" placeholder="<%= user.email %>">
                                </div>
                            </div>
                            <% if(typeof penName !== 'undefined'){ %>
                            <div class="form-group row d-flex align-items-center mb-5">
                                <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Pen Name</label>
                                <div class="col-lg-6">
                                    <input <%= editStatus %> type="text" class="form-control" name="penName" value="<%= penName %>" placeholder="<%= penName %>">
                                </div>
                            </div>
                            <% } %>
                            <div class="form-group row d-flex align-items-center mb-5">
                                <label class="col-lg-2 form-control-label d-flex justify-content-lg-end">Birthday</label>
                                <div class="col-lg-6">
                                <% if(_locals.isLoggedIn && _locals.user.id == user.id) { %>
                                	<input type="date" class="form-control" name="DoB" value="<%= user.DoB %>" >    
                                <% } else { %>
                                    <input <%= editStatus %> type="text" class="form-control" name="DoB" value="<%= user.DoB %>" placeholder="<%= user.DoB === null ? 'Not set yet' : user.DoB %>">     
                                <% } %>
                                </div>
                            </div>

                            <div class="em-separator separator-dashed"></div>
                            <% if(editStatus == ''){ %>
                            <div class="text-right">
                                <button class="btn btn-gradient-01" type="submit">Save Changes</button>
                            </div>
                            <% } %>
                        </form>      
                    </div>
                </div>
            </div>
        </div>
        <!-- End Row -->
    </div>
</div>
