<div class="container">
    <div class="row">
        <h1 class="mt-3">Bài viết của bạn</h1>
        <div class="col-xl-10 p-0">
            <div class="position-relative mt-4 mb-3">
                <div class="group material-input">
                    <input type="text" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>
                            <i class="ion-search"></i>
                        <i class="font-weight-bold">Tìm kiếm bài viết</i>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-xl-2">
            <button type="button" class="mt-4 col-xl-12 btn btn-gradient-01 mr-1 mb-2">Viết bài</button>
        </div>
        <% posts.forEach(p => { %>
        <div class="col-xl-12 personal-post has-shadow col-md-12 mb-2">
            <div class="row  p-3">
                <div class="col-xl-3">
                    <img class="personal-post-thumbnail" src="/assets/img/avatar/avatar-01.jpg">
                </div>
                <div class="col-xl-7">
                    <h4 class="text-primary"><span class="font-weight-bold">Tiêu đề</span>: <%= p.title %></h4>

                    <div>
                        <span class="text-dark font-weight-bold">Chuyên mục: </span>
                        <span class="text-dark"><%= p.mainCateName + " > " + p.subCateName %></span>
                    </div>

                    <div>
                        <span class="text-dark font-weight-bold">Tình trạng: </span>
                        <span class="badge-text badge-text-small info">Chờ duyệt</span>
                    </div>

                    <div>
                        <div class="mt-2 text-dark font-weight-bold">Nội dung tóm tắt:</div>
                        <div class="text-dark"><%= p.content.length < 230 ? p.content : p.content.substring(0,230) + "..." %></div>
                    </div>


                </div>
                <div class="col-xl-2">


                    <a class="action-a-link float-right" href="">
                        <i class="la la-trash trash"></i>
                    </a>

                    <a class="action-a-link float-right mr-2" href="">
                        <i class="la la-edit edit"></i>
                    </a>


                </div>
            </div>
        </div>
        <% }); %>

    </div>
</div>
</div>