<div class="container">
    <div class="row">
        <h1 class="mt-3">Bài viết của bạn</h1>
        <div class="col-xl-10 col-md-10 col-sm-12 p-0">
            <div class="position-relative mt-4 mb-3">
                <div class="group material-input">
                    <input type="text" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>
                        <i class="ion-search"></i>
                        <i class="font-weight-bold">Tìm kiếm bài viết</i>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-2 col-sm-12">
            <a href="/writers/posts/add" class="mt-4 col-xl-12 btn btn-gradient-01 mr-1 mb-2">Viết bài</a>
        </div>
        <% posts.forEach(p => { %>
        <div class="col-xl-12 col-md-12 col-sm-12 personal-post has-shadow col-md-12 mb-2">
            <div class="row  p-3">
                <div class="col-xl-3 col-md-3 col-sm-12">
                    <img class="personal-post-thumbnail" src="/assets/img/posts/<%= p.thumbnail %>">
                </div>
                <div class="col-xl-7 col-md-7 pt-2">
                    <h4 class="text-primary"><span class="font-weight-bold">Tiêu đề</span>: <%= p.title %></h4>

                    <div class="mt-3">
                        <span class="text-dark font-weight-bold">Chuyên mục: </span>
                        <span class="text-dark"><%= p.MainCategory.name + " / " + p.SubCategory.name %></span>
                    </div>

                    <div class="mt-2">
                        <span class="text-dark font-weight-bold">Tình trạng: </span>
                        <span class="badge-text badge-text-small info mb-1"><%= p.status %></span>
                    </div>

                    <div class="mt-2">
                        <span class="text-dark font-weight-bold">Nhãn: </span>
                        <% p.Tags.forEach(t => { %>
                            <button type="button" class="btn btn-sm btn-square mr-1 btn-tag-style"><%= t.name %></button>
                        <% }); %>
                    </div>

                    <div class="mt-2">
                        <div class="mt-2 text-dark font-weight-bold">Nội dung tóm tắt:</div>
                        <div class="text-dark">
                            <%= p.shortContent.length < 100 ? p.shortContent : p.shortContent.substring(0,100) + "..." %>
                        </div>
                    </div>


                </div>
                <div class="col-xl-2 col-md-2 col-sm-12">
                    <a class="action-a-link float-right delete-post" data-id="<%= p.id %>" href="/">
                        <i class="la la-trash trash"></i>
                    </a>
                    <a class="action-a-link float-right mr-2" href="/writers/posts/edit/<%= p.slug %>">
                        <i class="la la-edit edit"></i>
                    </a>
                </div>
            </div>
        </div>


        <div id="modal-centered-<%= p.id %>" class="modal fade">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Thông báo</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                            <span class="sr-only">close</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p class="text-dark">
                            Bạn có chắc chắn muốn thực hiện thao tác này hay không ? Bài viết đã <span class="text-danger font-weight-bold">XÓA</span> sẽ không thể khôi phục lại
                        </p>
                    </div>
                    <div class="modal-footer">
                       
                        <a href="/writers/posts/delete/<%= p.slug %>" class="btn btn-primary">Chấp nhận</a>
                        <button type="button" class="btn btn-shadow" data-dismiss="modal">Hủy</button>
                    </div>
                </div>
            </div>
        </div> 
        <% }); %>

    </div>
</div>
</div>